{
  "manifest_version": 3,
  "name": "Gemini Chat Exporter",
  "version": "1.2",
  "description": "Export Gemini chats to markdown",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://gemini.google.com/*"],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "Gemini Chat Exporter",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  }
}